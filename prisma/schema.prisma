generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PatientUser {
  id        String   @id @default(cuid())
  fullName  String
  cns       String   @unique
  cpf       String   @unique
  phone     String
  address   String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  consultations MedicalConsultation[]
}


// TODO: add corrects fields to the MedicalConsultation model
model MedicalConsultation {
  id           String       @id @default(cuid())
  date         DateTime
  description  String
  patient      PatientUser  @relation(fields: [patientId], references: [id])
  patientId    String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}
